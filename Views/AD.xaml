<Page x:Class="AccessManager.Views.AD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:conv="clr-namespace:AccessManager.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200">

    <Page.Resources>
        <conv:BoolToStatusConverter x:Key="BoolToStatusConverter"/>
        <!-- Шаблон для списка AD -->
        <DataTemplate x:Key="AdUserTemplate">
            <Border Padding="8" Margin="4" CornerRadius="6" Background="WhiteSmoke">
                <StackPanel>
                    <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="14"/>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                        <TextBlock Text="{Binding Login}" FontStyle="Italic" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Enabled, Converter={StaticResource BoolToStatusConverter}}" />
                    </StackPanel>
                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </DataTemplate>

        <!-- Шаблон для списка только что записанных в БД -->
        <DataTemplate x:Key="DbNewUserTemplate">
            <Border Padding="8" Margin="4" CornerRadius="6" Background="#fffdf2">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="14"/>
                        <Border Background="#ff8c00" CornerRadius="4" Padding="4,2" Margin="8,0,0,0">
                            <TextBlock Text="Новое" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                        <TextBlock Text="{Binding Login}" FontStyle="Italic" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding Enabled, Converter={StaticResource BoolToStatusConverter}}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="Gray" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>


    <Grid>
        
       

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Верхняя панель: кнопка, поиск, сортировка -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16" VerticalAlignment="Top">
                    <Button x:Name="btnNext"
                      Content="Заявка на доступ к ресурсам"
                      Width="220" Height="44"
                      Margin="0,0,12,0"
                      Background="#0078D7" Foreground="White"
                      FontWeight="Bold"
                      Click="btnNext_Click"/>
                    <Button x:Name="btnLoad"
      Content="🔄 Обновить из AD"
      Width="220" Height="44"
      Margin="0,0,12,0"
      Background="#0078D7" Foreground="White"
      FontWeight="Bold"
      Click="btnLoad_Click"/>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                        <TextBlock Background="Wheat" Text="Поиск:" VerticalAlignment="Center" Margin="10,0"/>
                        <TextBox x:Name="txtSearch" Width="220" Height="32" Margin="6,0"
                           VerticalContentAlignment="Center" TextChanged="txtSearch_TextChanged"/>
                        <Button Content="Сброс" Height="32" Margin="6,0" Click="btnClearSearch_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                        <TextBlock Background="Wheat" Text="Сортировка:" VerticalAlignment="Center" Margin="10,0"/>
                        <ComboBox x:Name="cmbSort" Width="220" Height="32" Margin="6,0"
                            SelectionChanged="cmbSort_SelectionChanged">
                            <ComboBoxItem>По фамилии (А→Я)</ComboBoxItem>
                            <ComboBoxItem>По фамилии (Я→А)</ComboBoxItem>
                            <ComboBoxItem>По логину (А→Я)</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>

                <!-- Основная часть: списки -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="400"/>
                    </Grid.ColumnDefinitions>

                    <!-- AD -->
                    <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="12" BorderBrush="#ddd" BorderThickness="1" Margin="0,0,12,0">
                        <DockPanel>
                            <TextBlock Text="Пользователи из Active Directory"
                                 FontSize="16" FontWeight="Bold" Margin="0,0,0,8"
                                 DockPanel.Dock="Top"/>
                            <ListBox x:Name="listAD"
                               ItemTemplate="{StaticResource AdUserTemplate}"
                               ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </DockPanel>
                    </Border>

                    <!-- Только что записанные -->
                    <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="12" BorderBrush="#ddd" BorderThickness="1">
                        <DockPanel>
                            <TextBlock Text="Новые записи в БД"
                                 FontSize="16" FontWeight="Bold" Margin="0,0,0,8"
                                 DockPanel.Dock="Top"/>
                            <ListBox x:Name="listSaved"
                               ItemTemplate="{StaticResource DbNewUserTemplate}"
                               ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                        </DockPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
