<Window x:Class="AccessManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система управления доступами" Height="850" Width="1000"
        Background="{StaticResource BackgroundColor}">
    <DockPanel>
        <!-- Верхнее меню -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Background="{StaticResource PrimaryColor}" Height="60">
            <TextBlock Text="Система управления доступами" FontSize="22" VerticalAlignment="Center" Margin="20,0,0,0" Foreground="Black"/>
        </StackPanel>
        <!-- Навигация слева -->
        <StackPanel DockPanel.Dock="Left" Width="200" Background="LightBlue" Margin="0,0,2,0">
            <Button Content="Форма заявки" Click="OpenForm_Click" Margin="10"/>
            <Button Content="Загрузить пользователей" Click="NavigateToAD_Click" Margin="10"/>
            <TextBlock x:Name="aut" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <!-- Основная область -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>